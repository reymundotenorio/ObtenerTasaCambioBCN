<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">

      <h1>Tasa de cambio BCN</h1>

      <%= bootstrap_form_tag url: getbcn_path, layout: :horizontal, label_errors: true do |f| %>
      <div class="col-md-10">
        <%= f.date_select :fecha, hide_label: true %>
      </div>

      <div class="controls form">
        <div class="col-md-12">
          <%= f.radio_button :opcion, 0, label: "Obtener tasa del dia", checked: true %>
          <%=   f.radio_button :opcion, 1, label: "Obtener tasa del mes" %>
        </div>
      </div>

      <div class="form-group">

        <div class="col-md-12 text-center">
          <%= f.submit 'Obtener' , class: "btn btn-success" %>
        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <div class="alert alert-success text-center" role="alert">

        <!-- Tasa día -->
        <% if $tasa_dia.present? then %>
        <p>Tasa de cambio:
          <%= $tasa_dia.to_s %></p>

      <% else %>
        <!-- <p>Error al obtener tasa diaria</p> -->
        <% end %>
        <!-- End Tasa día -->

        <!-- Tasa mes -->
        <% if $tasa_mes.present? then %>
        <ul>
          <% $tasa_mes.each do |tasa_detalle| %>
          <li>
            <p>
              <strong>Fecha:</strong>
              <%= tasa_detalle[:fecha].to_s %>
              <strong>-></strong>
              <strong>Tasa:</strong>
              <%= tasa_detalle[:valor] %>
            </p>
          </li>
          <% end %>
        </ul>

      <% else %>
        <!-- <p>Error al obtener tasa mensual</p> -->
        <% end %>
        <!-- End Tasa mes -->

      </div>
    </div>
  </div>
</div>
